                        <Setter Property="Width" Value="160"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth4"/>
